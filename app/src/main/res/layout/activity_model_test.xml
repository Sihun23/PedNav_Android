<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Detection Test"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Start Detection Button -->
        <TextView
            android:id="@+id/btnStartDetection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Detection"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Start Detection Button -->
        <TextView
            android:id="@+id/btnStopDetection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Detection"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Detection Result -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detection Result: Waiting..."
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Go to Home Activity -->
    <TextView
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="430dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:padding="12dp"
        android:text="Go to Home Page"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
